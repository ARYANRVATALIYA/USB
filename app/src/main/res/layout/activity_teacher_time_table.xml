<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/StudentTimeTableSemSelectionContainer"
        android:weightSum="1"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:layout_weight="0.2"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:textColor="#fafafa"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Select Sem :"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/TeacherTimeTableSemSelectionSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            />

        <Button
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:text="save"
            android:id="@+id/EditTeacherTimetableButton"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/TeacherTimeTableImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        />




</LinearLayout>
