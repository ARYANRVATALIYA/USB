<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/StudentTimeTableSemSelectionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Select Sem :"
            android:textColor="#fafafa"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/StudentTimeTableSemSelectionSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4" />


    </LinearLayout>


    <ImageView
        android:id="@+id/StudentNoticeShowerImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_below="@+id/StudentTimeTableSemSelectionContainer"
        android:text="Sample Timtable"
        android:textSize="20sp"

        />


</RelativeLayout>
